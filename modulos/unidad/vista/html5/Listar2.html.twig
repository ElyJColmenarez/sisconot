{% extends 'Unidad.html.twig' %}

{% block contenido %}


    <div class="col-md-6">

    		<div class="panel">
                    <div class="panel-heading">                       
                         <h3><i class="icon-table"></i> Lista de Unidades Curriculares</h3>    
                    </div>
                    <div class="panel-body" style="min-height: 447px;">

  
			            <div class="box-content">
			                <div class="btn-toolbar pull-right clearfix">
				                    <div class="btn-group">
				                        <a class="btn btn-circle show-tooltip" title="Agregar Unidad Curricular" href="index.php?m_modulo=unidad&m_formato=html5&m_accion=preAgregarModif&m_vista=Agregar" ><i class="icon-plus"></i></a>
