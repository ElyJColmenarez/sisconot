				                    </div>	                  
		                       </div>
				 			<div class="clearfix"></div>
					 			<div id='listarI'>											
								    	<table class="table table-advance" id="table">
										 <thead>
								            <tr>
								            	<th>N° Código</>
								                <th>Nombre Unidad Curricular</th>
								                <th>Descripción</th>			            
								                <th>Modificar</th>
								                <th>Eliminar</th>
								            </tr>
								        </thead>
										  <tbody>									
											{% for unidad in unidades %}									
													<tr >
														
														<td><a href="#" onmouseover="verDetalle({{unidad.codigo}})" >{{unidad.codigo}}</a></td>
														<td><a href="#"  onmouseover="verDetalle({{unidad.codigo}})">{{unidad.nombre }} ({{unidad.cod_uni_ministerio}})</a></td>
														<td><a href="#"  onmouseover="verDetalle({{unidad.codigo}})">{{unidad.cod_uni_ministerio}}</a></td>
