															<button class="btn btn-info" title="Modificar la Unidada Curricular" onclick="redirectEdit({{unidad.codigo}})">
																<i class="icon-pencil"></i>
															</button>
														</td>	
														<td>
															<button class="btn btn-danger" title="Eliminar Pensum" onclick="eliminarUnidad({{unidad.codigo}});" title="Eliminar Unidad">
																<i class="icon-remove"></i>
															</button>
														</td>	

													</tr>
													
											{% endfor %} 
								  		</tbody>		
									</table>    		 
